<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.metadatacenter</groupId>
    <artifactId>cedar-parent</artifactId>
    <version>1.8.2-SNAPSHOT</version>
  </parent>

  <groupId>org.metadatacenter</groupId>
  <artifactId>cadsr2cedar</artifactId>
  <version>1.8.2-SNAPSHOT</version>
  <name>Project that generates CEDAR template fields from caDSR XML-encoded DataElement instances</name>

  <scm>
    <connection>scm:git:git@github.com:metadatacenter/cadsr2cedar.git</connection>
    <developerConnection>scm:git:git@github.com:metadatacenter/cadsr2cedar.git</developerConnection>
    <url>https://github.com/metadatacenter/cadsr2cedar</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.metadatacenter</groupId>
      <artifactId>cedar-server-globals</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-jdk14</artifactId>
      <version>1.7.23</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-all</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.plugin.version}</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <id>convert</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>org.metadatacenter.cadsr.ingestor.CadsrConverterTool</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>upload</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>org.metadatacenter.cadsr.ingestor.CadsrUploaderTool</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <!-- Awaiting later version that supports Java 9 -->
        <version>2.3.1</version>
        <executions>
          <execution>
            <id>xjc</id>
            <goals>
              <goal>xjc</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <packageName>org.metadatacenter.cadsr</packageName>
          <sources>
             <source>src/main/resources/xsd</source>
          </sources>
          <xjbSources>
             <xjbSource>src/main/resources/xjb</xjbSource>
          </xjbSources>
        </configuration>
      </plugin>
      <!-- Tell an IDE to include generated code in its compile phase. jsonschema2pojo uses ${basedir}/target/java-gen -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>test</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${basedir}/target/java-gen</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
